<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seu.seuairmonitor.fragment.UserFragment"
    android:background="@drawable/user_bk">
    <!-- TODO: Update blank table layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal|top"
       >


        <Button

            android:id="@+id/Btn_edit_info"

            android:background="@layout/activity_btn_shape"
            android:text="未登录"
            android:layout_width="145dp"

            android:layout_height="145dp"


            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:onClick="onUserInfoClick" />
        <!--android:layout_gravity="center_horizontal|top"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="匿名用户"
            android:id="@+id/userlabel"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="visible" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
       >
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/usertitle"-->
            <!--android:id="@+id/usertitle"/>-->
        <Button
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:background="@drawable/softwareinfo"
            android:id="@+id/Btn_check_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:onClick="onCheckUpdateClick" />

        <Button
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:background="@drawable/controllinfo"
            android:id="@+id/Btn_edit_nodes"
            android:layout_below="@+id/Btn_check_update"
            android:layout_centerInParent="true"
            android:nestedScrollingEnabled="true"
            android:layout_marginTop="10dp"
            android:onClick="onNodesClick" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="扬尘监测系统"
        android:id="@+id/textView3"
        android:layout_below="@id/Btn_check_update"
            android:layout_centerInParent="true"
        android:layout_marginTop="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="版本1.0"
            android:id="@+id/textView2"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView3"  />
    </RelativeLayout>

</LinearLayout>
